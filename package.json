{
  "name": "auto-eslint-cli",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "lint": "eslint --ext .js,.ts . && prettier --check .",
    "lint:fix": "eslint --fix --ext .ts,.js . && prettier --write ."
  },
  "bin": {
    "auto-eslint-cli": "./bin/index.js"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-angular": "^13.1.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-typescript": "^0.14.0",
    "esprima": "^4.0.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5",
    "typescript-eslint-parser": "^22.0.0"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "yarn lint"
    ]
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^8.1.0",
    "ora": "^6.0.0"
  }
}
